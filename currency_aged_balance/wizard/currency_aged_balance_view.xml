<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_aged_currency_balance_view" model="ir.ui.view">
        <field name="name">Aged Partner Currency Balance</field>
        <field name="model">account.aged.trial.balance</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <separator string="Aged Partner Currency Balance"/>
                <label string="Aged Partner Currency Balance is a more detailed report of your receivables by intervals."/>
                <group col="4">
                    <field name="date_from"/>
                    <field name="period_length"/>
                    <newline/>
                    <field name="result_selection" widget="radio"/>
                    <field name="target_move" widget="radio"/>
                    <field name="direction_selection"/>
                    <field name="currency_id"/>
                    <field name="partner_id"/>
                </group>
                <field name="journal_ids" required="0" invisible="1"/>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_account_aged_currency_balance_view" model="ir.actions.act_window">
        <field name="name">Aged Partner Currency Balance</field>
        <field name="res_model">account.aged.trial.balance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="account_aged_currency_balance_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_currency_aged_balance" name="Aged Partner Currency Balance" action="action_account_aged_currency_balance_view" parent="account.menu_finance_legal_statement"/>
</odoo>
